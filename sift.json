{
  "name": "botfwk-sift",
  "display-name": "Botfwk Demo Sift",
  "description": "",
  "author": "",
  "version": "1.0.0",
  "icon": "assets/blueprint.svg",
  "interfaces": {
    "summary": {
      "controller": "dist/js/controller.umd-es2015.min.js"
    }
  },
  "dag": {
    "inputs":{
      "botfwk":{
        "messages": {
          "filter" : {
            "conditions" : [
              {
                "type" : "message:direct_mention,direct_message,mention"
              },
              {
                "text" : {
                  "regexp" : {
                    "flags" : "i",
                    "pattern" : ".*"
                  }
                }
              }
            ],
            "operator" : "AND"
          }
        }
      }
    },
    "nodes":[{
      "#": "Bot",
      "implementation": {
        "javascript": "server/bot.js"
      },
      "input": {
        "bucket": "messages"
      },
      "outputs": {
        "null": {}
      }
    }],
    "stores":{
      "null" : {
        "key$schema":"string"
      }
    },
    "outputs":{}
  }
}
